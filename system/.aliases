# Shortcuts

alias _="sudo"
alias g="git"
alias v='nvim -b $(fzf)'
alias rgh='rg --hidden'
alias rr="rm -rf"
alias c="clear"

# dir listing/traversal
alias l="ls -lhAp --color=auto"
alias ls="ls --color=auto"
alias ll="ls -lA --color=auto"
alias lt="ls -lhAtr --color=auto"
alias ld="ls -ld --color=auto */"

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# tmux kill all sessions
alias tmuxkillall="tmux ls | cut -d : -f 1 | xargs -I {} tmux kill-session -t {}"

alias svnst="svn st | grep -E '^M|^A|^D'"

alias br=". ~/.bash_profile"

# docker for wsl (only enable if on wsl and did this: https://blog.jayway.com/2017/04/19/running-docker-on-bash-on-windows/)
alias docker="/mnt/c/Program\ Files/Docker/Docker/resources/bin/docker.exe"
alias docker-compose="/mnt/c/Program\ Files/Docker/Docker/resources/bin/docker-compose.exe"

# lua pointing at lua5.3
alias lua="lua5.3"
