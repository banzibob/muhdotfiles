# Shortcuts

alias _="sudo"
alias g="git"
alias v="vim"
alias rr="rm -rf"

# dir listing/traversal
alias l="ls -lahA"
alias ll="ls -lA"
alias lt="ls -lhAtr"
alias ld="ls -ld */"

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# will attach if session exists, or create a new session
alias tat='tmux new-session -As $(basename "$PWD" | tr . -)' 
alias tmuxsrc="tmux source-file ~/.tmux.conf"
# tmux kill all sessions
alias tmuxkillall="tmux ls | cut -d : -f 1 | xargs -I {} tmux kill-session -t {}" 
