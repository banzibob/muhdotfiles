# Make vim the default editor.
export EDITOR='vim'

# Go envs
export PATH=$PATH:/usr/local/go/bin
export PATH=$PATH:/usr/local/sbin
export PATH=$PATH:$HOME/workspace/go/bin
export PATH=$PATH:$HOME/workspace/go/bin/wywe
export GOPATH=$HOME/workspace/go
export GOBIN=$HOME/workspace/go/bin/wywe

# Git envs

# History

export HISTSIZE=32768
export HISTFILESIZE="${HISTSIZE}"
export SAVEHIST=4096
export HISTCONTROL=ignoredups:erasedups

# Enable colors

export CLICOLOR=1

# Prefer US English and use UTF-8

export LC_ALL="en_US.UTF-8"
export LANG="en_US"

export MANPAGER="less -X" # Donâ€™t clear the screen after quitting a manual page

export TERM='xterm-color'
export TERMINAL='xterm-color'

export FZF_DEFAULT_COMMAND='rg --files --no-ignore --hidden --follow --glob "!.git/*"'

export PATH=$PATH:/usr/lib/scala/bin
export PATH=$PATH:~/apache-maven-3.3.9/bin
export PATH=$PATH:~/workspace/spark-2.0.0-bin-hadoop2.7/bin
export JAVA_HOME=/usr
export PATH=$PATH:~/protoc/bin

# for rust
export OPENSSL_INCLUDE_DIR=/usr/local/opt/openssl/include
export DEP_OPENSSL_INCLUDE=/usr/local/opt/openssl/include
export OPENSSL_LIB_DIR=/usr/local/opt/openssl/lib
export LIBRARY_PATH=/usr/local/lib
export PATH=$PATH:~/.cargo/bin
